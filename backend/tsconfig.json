{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "../",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "src",
    "../shared"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}